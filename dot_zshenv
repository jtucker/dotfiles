export EDITOR=code
export XDG_CONFIG_HOME=$HOME/.config

typeset -U PATH path

if [ -d "$HOME/bin" ] ; then
    export PATH="$HOME/bin:$PATH"
fi
if [ -d "$HOME/.local/bin" ] ; then
    export PATH="$HOME/.local/bin:$PATH"
fi

# BREW STUFF
HOMEBREW_NO_ENV_HINTS=1
HOMEBREW_AUTO_UPDATE_SECS=86400 # Only autoupdate every 24hours
